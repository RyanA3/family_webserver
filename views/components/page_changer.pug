div(class="flex flex-col justify-between"
    id="pageChanger"
    hx-trigger="load"
    hx-get=`/image/images/${page}`
    hx-target="#imageCards"
    hx-swap="outerHTML")
    p Page #{Number(page)+1}
    div(class="flex flex-row gap-10")
        p(class="cursor-pointer" 
        id="prevPage"
        hx-get=`/image/pageChanger/${Number(page)-1}` 
        hx-target="#pageChanger" 
        hx-swap="outerHTML" 
        hx-trigger="click") Prev
        p(class="cursor-pointer"
        id="nextPage"
        hx-get=`/image/pageChanger/${Number(page)+1}` 
        hx-target="#pageChanger" 
        hx-swap="outerHTML" 
        hx-trigger="click") Next